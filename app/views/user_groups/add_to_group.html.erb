<div class="panel panel-default">
  <div class="panel-heading"> Add <%= @user_to_add.full_name %> to a group: </div>
  <div class="panel-body">

    <%= form_for @user_group do |f| %>
      <% if @user_group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user_group.errors.count, "error") %> prohibited this user_group from being saved:</h2>

          <ul>
          <% @user_group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      f.collection_select(Group, :group_id, Group.all.collect {|p| [ p.name, p.id ] })


      <div class="form-group">
      <select class="form-control" id="sel1">
      <% Group.all.each do |group| %>
        <option><%= group.name %></option>
      <% end %>
      </select>
    </div>

      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>


<%= link_to 'Back', user_user_groups_path %>
